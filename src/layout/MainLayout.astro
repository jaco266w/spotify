---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import TopBar from "../components/TopBar.astro";
import Shelf from "../components/Shelf.astro";
import PlaylistCard from "../components/PlaylistCard.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Spotify</title>
  </head>
  <body>
    <Nav />
    <TopBar />
    <main>
      <Shelf title="Focus">
        <PlaylistCard
          imgPath="../public/spotify_images/all_out_2010s.jpeg"
          title="All Out 2010s"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/chill_hits.jpeg"
          title="Chill Hits"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/day_dreamer.jpeg"
          title="Day Dreamer"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/deep_focus.jpeg"
          title="Deep Focus"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/instrumental_study.jpeg"
          title="Instrumental Study"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/jazz_vibes.jpeg"
          title="Jazz Vibes"
          body="Relax and indulge with beautiful piano pieces"
        />
      </Shelf>

      <Shelf title="Spotify Playlist">
        <PlaylistCard
          imgPath="../public/spotify_images/peaceful_piano.jpeg"
          title="Peaceful Piano"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/rap_caviar.jpeg"
          title="Rap Caviar"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/reading_adventure.jpeg"
          title="Reading Adventure"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/rock_classics.jpeg"
          title="Rock Classics"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/sleep.jpeg"
          title="Sleep"
          body="Relax and indulge with beautiful piano pieces"
        />
        <PlaylistCard
          imgPath="../public/spotify_images/tth.jpeg"
          title="Todays Top Hits"
          body="Relax and indulge with beautiful piano pieces"
        />
      </Shelf>
    </main>
  </body>
</html>

<style>
  body {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "nav topbar"
      "nav main"
      "footer footer";
    height: 100%;
  }
  :global(main) {
    grid-area: main;
  }
  :global(nav) {
    grid-area: nav;
  }
  :global(.topbar) {
    grid-area: topbar;
  }
  :global(footer) {
    grid-area: footer;
  }

  main {
    display: grid;
    grid-auto-rows: min-content;
    gap: var(--space-xxl);

    background: linear-gradient(#1f1f1f 0, var(--surface-default) 100%) 0 0 /
        100% 20rem no-repeat,
      var(--surface-default);

    overflow-y: auto;
    padding: var(--space-lg) var(--space-md);
  }

  @media (width > 1000px) {
    main {
      padding: var(--space-lg) var(--space-xl);
    }
  }
</style>

